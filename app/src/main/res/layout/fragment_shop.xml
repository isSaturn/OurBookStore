<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_color"
    tools:context=".User.ShopFragment">

    <RelativeLayout
        android:id="@+id/box_head"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/image_2021_11_25_211222_removebg_preview" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="174dp"
            android:layout_height="61dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="33dp"
            android:layout_toRightOf="@id/imageView5"
            android:fontFamily="@font/annie_use_your_telescope"
            android:text="OurBook.com"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold|italic" />
    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_shop_user"
        android:layout_width="386dp"
        android:layout_height="515dp"
        android:layout_below="@id/box_head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_listview"
        android:paddingTop="40dp" />

    <SearchView
        android:id="@+id/searchview_user"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/box_head"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="3dp"
        android:background="@drawable/custom_input"
        android:elevation="25dp"
        android:paddingLeft="10dp"
        android:searchHintIcon="@color/white"
        android:searchIcon="@drawable/loupe" />



</RelativeLayout>