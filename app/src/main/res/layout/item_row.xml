<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_item_row"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:layout_margin="5dp"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:background="@drawable/item_conor"
        android:backgroundTint="@color/white"
        android:elevation="30dp"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/img_shop_addtocart"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="35dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_addcart"
            android:drawableLeft="@drawable/themvaogio"
            android:paddingLeft="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.508" />


        <ImageView
            android:id="@+id/img_shop_sach"
            android:layout_width="53dp"
            android:layout_height="72dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_conor"
            android:src="@drawable/sach"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.571" />

        <TextView
            android:id="@+id/tv_shop_tensach"
            android:layout_width="204dp"
            android:layout_height="52dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/img_shop_sach"
            android:inputType="textMultiLine"
            android:text="Ten sach"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/tv_shop_giasach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_shop_tensach"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/img_shop_sach"
            android:text="Giá tiền"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            android:textStyle="bold" />


    </RelativeLayout>
</RelativeLayout>