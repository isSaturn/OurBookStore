<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="SpeakableTextPresentCheck">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BookManagement.EditAndDeleteBook">

        <ImageView
            android:id="@+id/editBook_img_Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back_icon" />

        <TextView
            android:id="@+id/editBook_tv_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:text="Chỉnh sửa sách"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editBook_img_Back" />

        <ImageView
            android:id="@+id/editBook_img_Sach"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editBook_tv_Title"
            app:srcCompat="@android:drawable/ic_menu_report_image" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/editBook_btn_ChonAnh"
            android:layout_width="99dp"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/buttonshape_icon"
            android:text="Chọn ảnh"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editBook_img_Sach" />

        <TextView
            android:id="@+id/editBook_tv_MaSach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:text="Mã sách"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editBook_btn_ChonAnh" />

        <EditText
            android:id="@+id/editBook_et_MaSach"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/custom_input"
            android:ems="10"
            android:hint="Nhập mã sách"
            android:paddingEnd="15dp"
            android:paddingLeft="15dp"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editBook_tv_MaSach" />

        <TextView
            android:id="@+id/editBook_tv_TenSach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:text="Tên sách"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editBook_et_MaSach" />

        <EditText
            android:id="@+id/editBook_et_TenSach"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/custom_input"
            android:ems="10"
            android:hint="Nhập tên sách"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:paddingEnd="15dp"
            android:paddingLeft="15dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editBook_tv_TenSach" />

        <TextView
            android:id="@+id/editBook_tv_GiaTien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:text="Giá tiền"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editBook_et_TenSach" />

        <EditText
            android:id="@+id/editBook_et_GiaTien"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/custom_input"
            android:ems="10"
            android:hint="Nhập giá tiền"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:paddingEnd="15dp"
            android:paddingLeft="15dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editBook_tv_GiaTien" />

        <TextView
            android:id="@+id/editBook_tv_SoLuong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:text="Số lượng"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editBook_et_GiaTien" />

        <EditText
            android:id="@+id/editBook_et_SoLuong"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/custom_input"
            android:ems="10"
            android:hint="Nhập số lượng"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:paddingEnd="15dp"
            android:paddingLeft="15dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editBook_tv_SoLuong" />

        <TextView
            android:id="@+id/editBook_tv_MoTa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:text="Mô tả"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editBook_et_SoLuong" />

        <EditText
            android:id="@+id/editBook_et_MoTa"
            android:layout_width="320dp"
            android:layout_height="196dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/custom_input"
            android:scrollbars="vertical"
            android:ems="10"
            android:hint="Mô tả "
            android:inputType="textPersonName|textMultiLine"
            android:maxLines="100"
            android:lines="20"
            android:minHeight="48dp"
            android:paddingLeft="15dp"
            android:paddingEnd="15dp"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:textAlignment="viewStart"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editBook_tv_MoTa" />

        <TextView
            android:id="@+id/editBook_tv_TacGia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:text="Tác giả"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editBook_et_MoTa" />

        <EditText
            android:id="@+id/editBook_et_TacGia"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_input"
            android:ems="10"
            android:hint="Nhập tên tác giả"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:paddingEnd="15dp"
            android:paddingLeft="15dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.089"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editBook_tv_TacGia" />

        <TextView
            android:id="@+id/editBook_tv_TheLoai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:text="Thể loại"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editBook_et_TacGia" />

        <Spinner
            android:id="@+id/editBook_spn_TheLoai"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editBook_tv_TheLoai"
            tools:ignore="SpeakableTextPresentCheck" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/editBook_btn_SuaSach"
            android:layout_width="116dp"
            android:layout_height="49dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/buttonshape_icon"
            android:padding="11dp"
            android:text="Lưu sản phẩm"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editBook_spn_TheLoai"
            tools:ignore="DuplicateClickableBoundsCheck" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/editBook_btn_XoaSach"
            android:layout_width="129dp"
            android:layout_height="52dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/buttonshape_icon"
            android:text="Xóa sản phẩm"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editBook_spn_TheLoai" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>
