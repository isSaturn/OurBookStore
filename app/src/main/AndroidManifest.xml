<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.androidproject_coupon">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".CouponManagement.CouponApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidProject_Coupon">
        <activity
            android:name=".User.ItemDetailActivity"
            android:exported="false" />
        <activity
            android:name=".activity_oderdetails"
            android:exported="false" />
        <activity
            android:name=".AccountManagement.RegisterAccount"
            android:exported="true" />
        <activity
            android:name=".User.MainActivity_User"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AccountManagement.Login"
            android:exported="true" />
        <activity
            android:name=".BookManagement.EditAndDeleteBook"
            android:exported="true" />
        <activity
            android:name=".BookManagement.AddBook"
            android:exported="true" />
        <activity
            android:name=".CouponManagement.EditCoupon"
            android:exported="true" />
        <activity
            android:name=".CouponManagement.AddCoupon"
            android:exported="true" />
        <activity
            android:name=".InvoiceManagement.Invoice.InvoiceInformation"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>