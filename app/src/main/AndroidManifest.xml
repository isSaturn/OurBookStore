<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.androidproject_coupon">

    <application
        android:name=".CouponManagement.CouponApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidProject_Coupon">
        <activity
            android:name=".User.MainActivity_User"
            android:exported="true" />
        <activity
            android:name=".AccountManagement.RegisterAccount"
            android:exported="true" />
        <activity
            android:name=".AccountManagement.Login"
            android:exported="true" />
        <activity
            android:name=".BookManagement.EditAndDeleteBook"
            android:exported="true" />
        <activity
            android:name=".BookManagement.AddBook"
            android:exported="true" />
        <activity
            android:name=".EditCoupon"
            android:exported="true" />
        <activity
            android:name=".CouponManagement.AddCoupon"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OrderManagement.OrderInformation"
            android:exported="true" />
        <activity
            android:name=".OrderManagement.ViewOrderInformation"
            android:exported="true" />
        <activity
            android:name=".User.MainActivity_User"
            android:exported="true"
            tools:ignore="DuplicateActivity" />
    </application>

</manifest>